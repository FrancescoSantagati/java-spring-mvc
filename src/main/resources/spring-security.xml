<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http auto-config="true" use-expressions="true" create-session="ifRequired">
        <intercept-url pattern="/pizzeria/user/*" access="hasRole('ROLE_USER')" />
        <intercept-url pattern="/pizzeria/admin/*" access="hasRole('ROLE_ADMIN')" />
        <access-denied-handler error-page="/403" />
        <form-login
                login-page="/pizzeria/login"
                default-target-url="/pizzeria/"
                authentication-failure-url="/pizzeria/login?error"
                username-parameter="username"
                password-parameter="password" />
        <logout logout-success-url="/pizzeria/login?logout" />
        <!-- enable csrf protection -->
        <!--<csrf/>-->
    </http>

    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query=
                                       "select username,password,enabled from ium_users where username=?"
                               authorities-by-username-query=
                                       "select username, role from ium_user_roles where username =?  " />
        </authentication-provider>
    </authentication-manager>

</beans:beans>